extends layout

block content
  header(class="w-full sticky top-0 left-0 p-5 text-white backdrop-blur-lg shadow-xl bg-black/50 z-10")
    nav(class="mx-auto max-w-screen-lg flex justify-between items-center gap-4 flex-wrap")
      h1(class="text-sm font-medium") WalenCiaga
      div.flex.gap-6.text-sm.font-light.mx-auto
        a(href="/") Home
        a(href="/about") About
        a(href="/products") Products
        a(href="/contact") Contact
      div.text-sm.text-nowrap 1 800-123-4567
      button.button-base(onclick="navigateRegister()") Get Started

  main.text-white.flex.justify-center.items-center.h-full
    section(class="px-10 py-20 max-w-screen-sm w-full bg-black/80 rounded-lg backdrop-blur-lg shadow-md")
      h2.text-4xl.font-extralight.text-center Register
      form.mt-10.flex.flex-col.gap-4(onsubmit="registerUser(event);")
        input(type="text", name='name', class="p-3 bg-black border border-gray-600 rounded-lg placeholder-gray-400", placeholder="Full Name", required=true)
        input(type="email", name='email', class="p-3 bg-black border border-gray-600 rounded-lg placeholder-gray-400", placeholder="Email", required=true)
        input(type="password", name='password', class="p-3 bg-black border border-gray-600 rounded-lg placeholder-gray-400", placeholder="Password", required=true)
        input(type="password", name="confirmPassword", class="p-3 bg-black border border-gray-600 rounded-lg placeholder-gray-400", placeholder="Confirm Password", required=true)
        button(type="submit", class="py-2 px-6 bg-green-400 text-black rounded-lg mt-4 flex items-center justify-center gap-3")
          img(src="/images/spinner.svg", alt="spinner", class="register-spinner w-6 hidden")
          | Register
      p(class="text-center text-gray-400 mt-4")
        | Already have an account?
        a(href="/login", class="text-green-400")&nbsp; Login here

  footer.text-center.py-5.text-sm.font-light.text-white
    | &copy; 2024 WalenCiaga. All rights reserved.
  
  script(src="/javascripts/default.js")
  script(src="/javascripts/register.js")
